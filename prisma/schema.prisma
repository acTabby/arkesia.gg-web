generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model AreaNode {
  id          String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  areaName    String
  position    Float[]
  type        String
  name        String
  description String?
  screenshot  String?
  userId      String
  user        User    @relation(fields: [userId], references: [id])

  @@index([areaName])
}

model User {
  id    String     @id @default(dbgenerated()) @map("_id") @db.ObjectId
  token String     @unique
  nodes AreaNode[]

  @@index([token])
}
